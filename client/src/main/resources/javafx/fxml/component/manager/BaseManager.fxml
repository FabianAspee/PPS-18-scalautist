<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.PopOver?>

<BorderPane fx:id="baseManager" stylesheets="@../../../css/component/manager/BaseManager.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="60.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="nameLabel" prefHeight="17.0" prefWidth="131.0" text="Label" />
                <Label fx:id="idLabel" prefHeight="17.0" prefWidth="131.0" text="Label" />
                <Button fx:id="notificationButton" prefHeight="27.0" prefWidth="110.0" >
                    <PopOver fx:id="popover"/>
                </Button>
            </children>
        </HBox>
    </top>
    <left>
        <VBox fx:id="optionsBox">
            <children>
                <Button fx:id="generateTurnsButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="110.0" />
                <Button fx:id="manageAbsenceButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="110.0" />
                <Button fx:id="redoTurnsButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="110.0" />
                <Button fx:id="printResultButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="110.0" />
                <Button fx:id="manageZoneButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="110.0" />
                <Button fx:id="manageTerminalButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="110.0" />
                <Button fx:id="richiestaButton" mnemonicParsing="false" prefHeight="27.0" prefWidth="110.0" />
            </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
        </VBox>
    </left>
    <Accordion fx:id="accordion"></Accordion>
</BorderPane>
